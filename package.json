    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "http-server": "^14.1.1",
    "mkdirp": "^3.0.1",
    "npm-failsafe": "^1.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
